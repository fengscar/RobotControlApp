<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dlEditMap"
        android:layout_width="match_parent"
        android:background="@color/beige"
        android:layout_height="match_parent">
    <!--编辑地图 fragment-->
    <FrameLayout
            android:id="@+id/edit_map_frame"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

    <!-- 菜单栏 ( 路线 List ) -->
    <LinearLayout
            android:layout_gravity="start"
            android:layout_width="@dimen/home_btn_width"
            android:layout_height="match_parent"
            android:background="@color/beige"
            android:clickable="true"
            android:orientation="vertical">
        <com.feng.CustomView.IconButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iconBtnBack"
                android:textSize="20sp"
                android:drawableLeft="@mipmap/btn_back"/>

        <ListView
                android:id="@+id/routeListView"
                android:layout_width="@dimen/home_btn_width"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#FFFFFF"
                android:dividerHeight="1dp"
                android:listSelector="#00000000"
                android:scrollbars="none"/>

        <Button
                android:id="@+id/addRoute"
                android:background="@drawable/uniform_blue_button"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/edit_map_add_route"
                android:textSize="26sp"/>
        <Button
                android:id="@+id/btnAdjust"
                android:background="@drawable/uniform_blue_button"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/edit_map_auto_adjust"
                android:textSize="26sp"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
