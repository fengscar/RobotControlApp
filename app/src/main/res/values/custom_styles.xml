<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 对话框标题,居中 -->
    <style name="dialog_title">
        <item name="android:textColor">#111111</item>
        <item name="android:background">@drawable/round_blue_79</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 警报框标题,居中 -->
    <style name="warning_title">
        <item name="android:textColor">#111111</item>
        <item name="android:padding">10sp</item>
        <item name="android:background">@drawable/round_red_79</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 对话框 背景 -->
    <style name="dialog_background">
        <item name="android:background">@drawable/white</item>
    </style>
    <!-- 按键栏背景 -->
    <style name="dialog_btn_background">
        <item name="android:background">@drawable/toast_background</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- 标题字体 -->
    <style name="text_30sp_333333">
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_24sp_111111">
        <item name="android:textColor">#111111</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- 列名 (灰) -->
    <style name="text_20sp_999999">
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 列名 (黑) -->
    <style name="text_22sp_333333">
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- 列名 22(灰) -->
    <style name="text_22sp_999999">
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 列名 14 666666 -->
    <style name="text_14sp_666666">
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- toast text -->
    <style name="text_16sp_999999">
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- 按键-蓝色(确定提示) -->
    <style name="button_blue">
        <item name="android:background">@drawable/round_blue_1379</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!-- 按键-灰色 边框 -->
    <style name="button_gray">
        <item name="android:background">@drawable/toast_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!-- 横向 天蓝按键 -->
    <style name="button_skyblue_row">
        <item name="android:background">@drawable/skyblue</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <!-- 竖向 天蓝按键 -->
    <style name="button_skyblue_colunm">
        <item name="android:background">@drawable/round_skyblue_270</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!-- 下拉框 -->
    <style name="spinner_blue">
        <item name="android:spinnerMode">dropdown</item>
    </style>
    <!-- 密码输入框 (6格) -->
    <style name="dialog_input_password">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:background">@drawable/white</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
    </style>
    <!-- 标准背景 -->
    <style name="custom_background">
        <item name="android:background">@drawable/round_white_gradient</item>
    </style>
    <!-- 弹窗背景 -->
    <style name="popup_background">
        <item name="android:background">@drawable/round_green_gradient</item>
    </style>
    <!-- route listView选项 -->
    <style name="list_view_background">
        <item name="android:background">@drawable/round_gold_1379</item>
    </style>
    <!-- route listView选项 -->
    <style name="switch_style"></style>

    <!-- 进度条 -->
    <style name="progress_style">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_load_style</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="warning_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Holo">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 设置 -目录按键 -->
    <style name="menu_btn">
        <item name="android:layout_margin">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">@drawable/round_green_gradient</item>
    </style>
    <!-- 编辑节点/编辑路径的图标属性  -->
    <style name="popup_icon">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="drawerLayoutItemBtnStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_drawer_item_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="drawerLayoutMenuBtnStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/selector_drawer_menu_btn</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textScaleX">1.10</item>

    </style>
</resources>