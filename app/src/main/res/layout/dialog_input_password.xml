<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialogTitle"
        style="@style/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/dialog_input_password" />

    <Spinner
        android:id="@+id/spUserGroup"
        style="@style/spinner_blue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:entries="@array/user_type"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp" >

        <EditText
            android:id="@+id/inputPassword1"
            style="@style/dialog_input_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp" >
        </EditText>

        <EditText
            android:id="@+id/inputPassword2"
            style="@style/dialog_input_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp" >
        </EditText>

        <EditText
            android:id="@+id/inputPassword3"
            style="@style/dialog_input_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp" >
        </EditText>

        <EditText
            android:id="@+id/inputPassword4"
            style="@style/dialog_input_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp" >
        </EditText>

        <EditText
            android:id="@+id/inputPassword5"
            style="@style/dialog_input_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp" >
        </EditText>

        <EditText
            android:id="@+id/inputPassword6"
            style="@style/dialog_input_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp" >
        </EditText>
    </LinearLayout>

</LinearLayout>